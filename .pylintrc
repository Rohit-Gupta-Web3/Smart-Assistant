[MASTER]
load-plugins=pylint_django
ignore=migrations, settings.py
jobs=1

# [MESSAGES CONTROL]
# disable=
#     missing-docstring,
#     too-few-public-methods,
#     no-member,
#     too-many-arguments,
#     too-many-locals,
#     too-many-instance-attributes,
#     too-many-branches,
#     too-many-statements,
#     duplicate-code,
#     import-error,
#     invalid-name,
#     line-too-long,
#     too-many-lines,
#     wrong-import-order,
#     wrong-import-position,
#     consider-using-f-string

[FORMAT]
max-line-length=120

[DESIGN]
max-args=8
max-locals=25
max-attributes=10
max-branches=15
max-statements=50

[TYPECHECK]
ignored-classes=Settings, _MovedItems

[REPORTS]
output-format=colorized
reports=no

[REFACTORING]
max-nested-blocks=5

[LOGGING]
logging-modules=logging

[MASTER]
load-plugins=pylint_django
django-settings-module=config.settings
